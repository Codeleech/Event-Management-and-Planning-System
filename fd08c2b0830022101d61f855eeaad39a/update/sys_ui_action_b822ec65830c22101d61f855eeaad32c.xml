        <script><![CDATA[function submitFeedback() {
    var ratingOptions = ["Excellent", "Good", "Average", "Poor"];
    var rating = prompt("Rate the event: Excellent, Good, Average, or Poor");

    if (!rating || !ratingOptions.includes(rating)) {
        alert("Invalid rating. Please enter Excellent, Good, Average, or Poor.");
        return;
    }

    var ga = new GlideAjax('FeedbackSubmission');
    ga.addParam('sysparm_name', 'createFeedback');
    ga.addParam('sysparm_attendee_id', g_form.getUniqueValue());
    ga.addParam('sysparm_event_id', g_form.getValue('u_event_id'));
    ga.addParam('sysparm_rating', rating);

    ga.getXMLAnswer(function(response) {
        if (response === 'success') {
            g_form.addInfoMessage("Thank you for your feedback!");
        } else {
            g_form.addErrorMessage("Failed to submit feedback. Please try again.");
        }
    });
}
